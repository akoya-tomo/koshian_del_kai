{
    "manifest_version": 2,
    "name": "KOSHIAN delフォームをポップアップで開く 改",
    "version": "1.0.1",
    "description": "delフォームをポップアップで開きます",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "content_scripts": [
        {
            "exclude_matches": ["*://*.2chan.net/*/res/*","*://*.2chan.net/*/src/*"],
            "matches": ["*://*.2chan.net/*/*"],
            "js": ["cat.js"],
            "all_frames": true
        },
        {
            "matches": ["*://*.2chan.net/*/res/*"],
            "js": ["res.js"],
            "all_frames": false
        }
    ],
    "background": {
        "scripts": ["bg.js"]
    },
    "options_ui": {
        "page": "options.html"
    },
    "permissions": [
        "storage", "contextMenus"
    ],
    "applications": {
        "gecko": {
            "id": "{063FFDE8-45A4-11E8-93C3-23D2F3E0CD91}",
            "update_url": "https://raw.githubusercontent.com/akoya-tomo/koshian_del_kai/master/updates.json"
        }
    }
}